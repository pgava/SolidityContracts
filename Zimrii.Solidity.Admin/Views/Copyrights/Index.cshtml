@model Zimrii.Solidity.Admin.Models.CopyrightsModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <h2>Deploy contract</h2>

        <form asp-controller="Copyrights" asp-action="DeployAsync" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" for="CopyrightsAbi">Copyrights Abi:</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="CopyrightsAbi"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="CopyrightsBin">Copyrights Bin:</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="CopyrightsBin"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="AccessControlAbi">Access Control Abi:</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="AccessControlAbi"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="AccessControlBin">Access Control Bin:</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="AccessControlBin"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Password:</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" id="pwd" name="pwd">
                </div>
            </div>
            <button type="submit" class="btn btn-default">Deploy</button>
        </form>

        <div class="col-sm-8 alert alert-@Model.DeployResult.ResultType" data-bind="visible: @Model.DeployResult.ShowResult" style="margin-top:30px;">
            @Model.DeployResult.Message
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Set Copyrights</h2>

        <form asp-controller="Copyrights" asp-action="SetCopyrights" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" for="CopyrightsGuid">Copyrights Guid:</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="CopyrightsGuid" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="CopyrightsHash">Copyrights Hash:</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="CopyrightsHash" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Password:</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" id="pwd" name="pwd">
                </div>
            </div>
            <button type="submit" class="btn btn-default">Set Copyrights</button>
        </form>

        <div class="col-sm-8 alert alert-@Model.SetCopyrightsResult.ResultType" data-bind="visible: @Model.SetCopyrightsResult.ShowResult" style="margin-top:30px;">
            @Model.SetCopyrightsResult.Message
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Get Copyrights</h2>

        <form asp-controller="Copyrights" asp-action="GetCopyrights" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" for="CopyrightsGuid">Copyrights Guid:</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="CopyrightsGuid" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="CopyrightsHashRead">Copyrights Hash:</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="CopyrightsHashRead"/>
                </div>
            </div>

            <button type="submit" class="btn btn-default">Get Copyrights</button>
        </form>

        <div class="col-sm-8 alert alert-@Model.GetCopyrightsResult.ResultType" data-bind="visible: @Model.GetCopyrightsResult.ShowResult" style="margin-top:30px;">
            @Model.GetCopyrightsResult.Message
        </div>
    </div>
</div>
