@model Zimrii.Solidity.Admin.Models.RoyaltiesModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <h2>Deploy contract</h2>

        <form asp-controller="Royalties" asp-action="Deploy" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" for="Abi">Abi:</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Abi"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Bin">Bin:</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Bin"></textarea>
                </div>
            </div>

            <button type="submit" class="btn btn-default">Deploy</button>
        </form>

        <div class="alert alert-@Model.DeployResultType" data-bind="visible: ShowDeployResult" style="margin-top:30px;">
            @Model.DeployResult
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Set Royalties</h2>

        <form asp-controller="Royalties" asp-action="SetRoyalties" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" for="rguid">Royalties Guid:</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="RoyaltiesGuid" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="rhash">Royalties Hash:</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="RoyaltiesHash" />
                </div>
            </div>

            <button type="submit" class="btn btn-default">Set Royalties</button>
        </form>

        <div class="alert alert-@Model.DeployResultType" data-bind="visible: ShowDeployResult" style="margin-top:30px;">
            @Model.DeployResult
        </div>
    </div>
</div>
